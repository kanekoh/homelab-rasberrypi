version: "3"

services:
  pihole:
    container_name: pihole
    image: docker.io/pihole/pihole:latest
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "80:80/tcp"
    environment:
      TZ: 'Asia/Tokyo'
      # User requested WEBPASSWORD via environment variable
      WEBPASSWORD: '{{ pihole_password }}'
      # Keep FTLCONF as fallback or if user switches to v6 later/concurrently
      FTLCONF_webserver_api_password: '{{ pihole_password }}' 
      FTLCONF_dns_listeningMode: 'ALL'
    volumes:
      - './etc-pihole:/etc/pihole'
      - './etc-dnsmasq.d:/etc/dnsmasq.d'
    cap_add:
      - NET_ADMIN
      - SYS_TIME
      - SYS_NICE # Optional
    restart: unless-stopped
    networks:
      - pihole-net

networks:
  pihole-net:
    external: true
